augroup skeleton_per_filetype
    autocmd!
    autocmd BufNewFile *.java 0r $HOME/.vim/skeletons/java
    autocmd BufNewFile *.sh   0r $HOME/.vim/skeletons/sh
    autocmd BufNewFile *.py   0r $HOME/.vim/skeletons/py
    autocmd BufNewFile *.tex  0r $HOME/.vim/skeletons/tex
    autocmd BufNewFile *.hdl  0r $HOME/.vim/skeletons/hdl
    autocmd BufNewFile *.c    0r $HOME/.vim/skeletons/c
augroup END

" vim: ft=vim
