syntax enable

set hidden
set number
set incsearch
set smartcase
set ignorecase
set smartindent
set autoindent
set linebreak
set showmatch
set showcmd
set nobackup
set noswapfile
set mousehide
set wildmenu
set lazyredraw
set notimeout
set ttimeout
set expandtab
set splitright
set splitbelow
set nohlsearch

set wildmode=list:longest
set ttimeoutlen=5
set encoding=utf8
set laststatus=2
set tabstop=4
set shiftwidth=4
set sidescroll=1
set t_vb=

filetype indent plugin on

let g:ctrlp_working_path_mode = 'a'
let g:ctrlp_user_command = 'rg %s --files --color=never --glob ""'
let g:ctrlsf_auto_focus = { "at": "start" }
let g:vim_search_pulse_mode = 'pattern'
let g:asyncomplete_auto_popup = 0

inoremap <C-c> <esc>
